---
import { EDIT_POST } from "../config";

interface Props {
  slug: string;
}

const { slug } = Astro.props;
const editUrl = `${EDIT_POST.url}src/content/blog/${slug}.md`;
---

<a
  href={editUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="edit-link"
>
  <svg
    class="edit-icon"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z" />
    <path d="m15 5 4 4" />
  </svg>
  <em>Edit on GitHub</em>
</a>

<style>
  .edit-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--fg-secondary);
    opacity: 0.8;
    transition: opacity 0.2s ease, color 0.2s ease;
    text-decoration: none;
  }

  .edit-link:hover {
    opacity: 1;
    color: var(--accent);
  }

  .edit-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }
</style>
