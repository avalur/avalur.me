---
import BaseLayout from "../layouts/BaseLayout.astro";
import NetworkBg from "../components/NetworkBg.astro";
---

<BaseLayout title="Teaching" description="Courses and educational programs by Alexander Avdiushenko">
  <!-- Page Header -->
  <section class="relative overflow-hidden">
    <NetworkBg id="teaching-bg" nodeCount={50} />
    <div class="relative z-10 mx-auto max-w-5xl px-4 text-center py-16 md:py-20">
      <h1 class="text-4xl font-bold text-white md:text-5xl">Teaching</h1>
      <p class="mt-4 text-lg text-white/80 md:text-xl">
        Courses and educational programs
      </p>
    </div>
  </section>

  <!-- Courses Table -->
  <section class="mx-auto max-w-5xl px-4 py-12 md:py-16">
    <!-- Desktop Table -->
    <div class="hidden overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm md:block">
      <table class="w-full text-left text-sm">
        <thead>
          <tr class="border-b border-gray-200 bg-gray-50">
            <th class="px-6 py-4 text-xs font-semibold uppercase tracking-wider text-gray-500">
              Period
            </th>
            <th class="px-6 py-4 text-xs font-semibold uppercase tracking-wider text-gray-500">
              Course
            </th>
            <th class="px-6 py-4 text-xs font-semibold uppercase tracking-wider text-gray-500">
              University
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2025</td>
            <td class="px-6 py-4">
              <a
                href="https://avalur.github.io/mlcourse/index.html"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                ML Course
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              NUP flipped format, and self-paced open course for AI Club
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2024, fall</td>
            <td class="px-6 py-4">
              <a
                href="https://avalur.github.io/ai_club.html"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Youth AI Club
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              YouTube self-paced open course, JetBrains
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2024, fall</td>
            <td class="px-6 py-4">
              <a
                href="https://avalur.github.io/ml_fundament.html"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Fundamentals of ML
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Neapolis University Pafos, Cyprus
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2024, spring</td>
            <td class="px-6 py-4">
              <a
                href="https://avalur.github.io/advanced_ml.html"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Advanced ML
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Neapolis University Pafos, Cyprus
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2023, fall</td>
            <td class="px-6 py-4">
              <a
                href="https://avalur.github.io/ml_with_python.html"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                ML with Python
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Neapolis University Pafos, Cyprus
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2023, spring</td>
            <td class="px-6 py-4">
              <a
                href="https://github.com/avalur/math_for_ds"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Math for DS
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Neapolis University Pafos, Cyprus
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2022, fall</td>
            <td class="px-6 py-4">
              <a
                href="https://github.com/avalur/ml-course-kbtu"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Machine learning
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Kazakh-British Technical University
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2021&ndash;2022</td>
            <td class="px-6 py-4">
              <a
                href="https://github.com/spbu-math-cs/ml-course"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Machine learning <span class="text-gray-400">(in Russian)</span>
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              St Petersburg University, Department of Mathematics and Computer Science
            </td>
          </tr>
          <tr class="transition-colors hover:bg-gray-50/50">
            <td class="whitespace-nowrap px-6 py-4 text-gray-600">2018, fall</td>
            <td class="px-6 py-4">
              <a
                href="https://compscicenter.ru/courses/python/nsk/2018-autumn/"
                class="font-medium text-primary hover:text-primary-dark hover:underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                Python programming <span class="text-gray-400">(in Russian)</span>
              </a>
            </td>
            <td class="px-6 py-4 text-gray-600">
              Computer Science Center (ed project of JetBrains and Yandex companies)
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="space-y-4 md:hidden">
      <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm">
        <div class="mb-1 text-xs font-semibold uppercase tracking-wider text-gray-400">2025, fall</div>
        <a href="https://avalur.github.io/mlcourse/index.html" class="text-lg font-medium text-primary hover:underline" target="_blank" rel="noopener noreferrer">ML Course</a>
        <p class="mt-1 text-sm text-gray-600">NUP flipped format, and self-paced open course for AI Club</p>
      </div>
      <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm">
